{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "Camunda/nest-camunda-library/(.*)": "<rootDir>/../libs/nest-camunda-library/src/$1",
    "Camunda/nest-camunda-library": "<rootDir>/../libs/nest-camunda-library/src"
  }
}